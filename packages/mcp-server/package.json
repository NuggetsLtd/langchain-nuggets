{
  "name": "@nuggetslife/mcp-server",
  "version": "0.1.0",
  "description": "Nuggets identity verification MCP server \u2014 KYC, KYA, selective disclosure, and OAuth tools for any MCP client",
  "type": "module",
  "bin": {
    "nuggets-mcp-server": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./sse": {
      "types": "./dist/sse.d.ts",
      "import": "./dist/sse.mjs",
      "require": "./dist/sse.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --config tsup.config.ts --watch",
    "build": "tsup --config tsup.config.ts",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@nuggetslife/langchain": "workspace:*",
    "express": "^4.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@langchain/core": "^0.3.0",
    "@types/express": "^4.17.21",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "vite-tsconfig-paths": "^5.1.0"
  },
  "keywords": [
    "mcp",
    "nuggets",
    "identity",
    "kyc",
    "kya",
    "verification",
    "ai",
    "tools",
    "model-context-protocol"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NuggetsLtd/langchain-nuggets.git",
    "directory": "packages/mcp-server"
  }
}